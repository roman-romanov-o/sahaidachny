# Sahaidachny Environment Configuration
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to git - it should be in .gitignore

# ============================================
# Runner API Keys
# ============================================

# Claude Code CLI (Anthropic)
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Codex CLI (OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Gemini CLI (Google)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-key-here

# ============================================
# Runner Configuration
# ============================================

# Default runner to use (claude, codex, gemini)
SAHA_RUNNER=claude

# Fallback runner if primary unavailable (optional)
SAHA_FALLBACK_RUNNER=codex

# Enable automatic fallback (true/false)
SAHA_FALLBACK_ENABLED=true

# ============================================
# Agent Configuration
# ============================================

# Default timeout for agent execution (seconds)
SAHA_AGENT_TIMEOUT=300

# Maximum iterations for execution loop
SAHA_MAX_ITERATIONS=5

# ============================================
# Test Configuration
# ============================================

# Enable slow/expensive E2E tests (true/false)
# Set to false to skip tests that use real API calls
SAHA_RUN_SLOW_TESTS=true

# Cost warning threshold (USD)
# Warn if test run exceeds this cost
SAHA_COST_WARNING_THRESHOLD=1.00
